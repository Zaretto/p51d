<?xml version="1.0"?>

<PropertyList>

    <default>

        <menu n="1000">
          <label>P-51D</label>
             <item>
                <name>p51d-stores-none</name>
                <label>No External Stores</label>
                <binding>
                   <command>nasal</command>
                   <script>p51d.setStores(0)</script>
                </binding>
             </item>
             <item>
                <name>p51d-stores-bombs</name>
                <label>Bombs Only</label>
                 <binding>
                   <command>nasal</command>
                   <script>p51d.setStores(1)</script>
                </binding>
             </item>
             <item>
                <name>p51d-stores-rockets</name>
                <label>Rockets Only</label>
                <binding>
                   <command>nasal</command>
                   <script>p51d.setStores(2)</script>
                </binding>
             </item>
             <item>
                <name>p51d-stores-bombs-rockets</name>
                <label>Bombs and Rockets</label>
                <binding>
                   <command>nasal</command>
                   <script>p51d.setStores(3)</script>
                </binding>
             </item>
             <item>
                <name>p51d-stores-tanks</name>
                <label>Wing Tanks</label>
                <binding>
                   <command>nasal</command>
                   <script>p51d.setStores(4)</script>
                </binding>
             </item>
             <item>
                <name>p51d-stores-tanks-rockets</name>
                <label>Wing Tanks and Rockets</label>
                <binding>
                   <command>nasal</command>
                   <script>p51d.setStores(5)</script>
                </binding>
             </item>
             <item>
                <name>p51d-stores-load-guns</name>
                <label>Load Guns</label>
                <binding>
                   <command>nasal</command>
                   <script>p51d.loadGuns(1)</script>
                </binding>
             </item>
             <item>
                <name>p51d-stores-unload-guns</name>
                <label>Unload Guns</label>
                <binding>
                   <command>nasal</command>
                   <script>p51d.loadGuns(0)</script>
                </binding>
             </item>

            <item>
                <label>-----------------------</label>
                <enabled>false</enabled>
            </item>

            <item>
                <name>p51d-livery</name>
                <label>Select Livery...</label>
                <binding>
                    <command>nasal</command>
                    <script>
                        aircraft.livery.dialog.open()
                    </script>
                </binding>
            </item>

            <item>
                <name>p51d-options</name>
                <label>Aircraft Options...</label>
                <binding>
                    <command>nasal</command>
                    <script>dialogs.show_aircraft_options()</script>
                </binding>
            </item>

            <item>
                <name>p51d-autostart</name>
                <label>Autostart</label>
                <binding>
                    <command>nasal</command>
                    <script>p51d.autostart(1)</script>
                </binding>
            </item>
        </menu>

    </default>

</PropertyList>
