<?xml version="1.0"?>
<PropertyList>

    <path>gun-switch.ac</path>

    <animation>
        <type>rotate</type>
        <object-name>Switch</object-name>
        <property>/controls/armament/gunsight/power-on</property>
        <interpolation>
            <entry>
                <ind>0</ind>
                <dep>0</dep>
            </entry>
            <entry>
                <ind>-1</ind>
                <dep>-25</dep>
            </entry>
            <entry>
                <ind>1</ind>
                <dep>25</dep>
            </entry>
        </interpolation>
        <axis>
            <y>-1</y>
        </axis>
    </animation>

    <animation>
        <type>knob</type>
        <drag-direction>vertical</drag-direction>
        <drag-scale-px>30.0</drag-scale-px>
        <object-name>Switch</object-name>
        <object-name>Base.001</object-name>
        <object-name>cylinder.001</object-name>
        <action>
            <binding>
                <command>property-cycle</command>
                <property>/controls/armament/gunsight/power-on</property>
                <value type="int">-1</value>
                <value type="int">0</value>
                <value type="int">1</value>
                <wrap>false</wrap>
            </binding>
            <binding>
                <command>nasal</command>
                <script>
                    var modes = [0, 0, 1];
                    var arg = getprop("/controls/armament/gunsight/power-on") + 1;
                    setprop("/controls/armament/guns-enabled", modes[arg]);
                </script>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>gun-switch</tooltip-id>
                <label>Guns: %s</label>
                <mapping>nasal</mapping>
                <script>
                    var modes = ['CAMERA AND SIGHT', 'OFF', 'GUNS, CAMERA, AND SIGHT'];
                    return modes[arg[0]+1];
                </script>
                <property>/controls/armament/gunsight/power-on</property>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>material</type>
        <object-name>Switch</object-name>
        <object-name>switch-body-1</object-name>
        <object-name>switch-body-2</object-name>
        <object-name>switch-body-3</object-name>
        <object-name>switch-body-4</object-name>
        <emission>
            <factor-prop>controls/lighting/cabin-norm</factor-prop>
            <red>0.2</red>
            <green>0.15</green>
            <blue>0.15</blue>
        </emission>
    </animation>

    <animation>
        <type>material</type>
        <object-name>face</object-name>
        <emission>
            <factor-prop>controls/lighting/cabin-norm</factor-prop>
            <red>0.25</red>
            <green>0.2</green>
            <blue>0.2</blue>
        </emission>
    </animation>

</PropertyList>
