<?xml version="1.0"?>

<PropertyList>

    <path>K14-controller.ac</path>

    <animation>
        <type>range</type>
        <min-m>0</min-m>
        <max-m>45</max-m>
    </animation>

    <animation>
        <type>material</type>
        <object-name>GS-gyro-fixed</object-name>
        <object-name>GS-brightness</object-name>
        <object-name>GS-power</object-name>
        <object-name>GS-body</object-name>
        <object-name>Switch</object-name>
        <object-name>switchGuard</object-name>
        <object-name>switchCase</object-name>
        <object-name>switchNut</object-name>
        <emission>
            <factor-prop>/controls/lighting/cabin-norm</factor-prop>
            <red>0.2</red>
            <green>0.1</green>
            <blue>0.1</blue>
        </emission>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>Switch</object-name>
        <property>/controls/armament/gunsight/computer-on</property>
        <interpolation>
            <entry>
                <ind>0</ind>
                <dep>0</dep>
            </entry>
            <entry>
                <ind>1</ind>
                <dep>-60</dep>
            </entry>
        </interpolation>
        <center>
            <x-m>0.000056</x-m>
            <y-m>0.01</y-m>
            <z-m>0.0082</z-m>
        </center>
        <axis>
            <x>1</x>
        </axis>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>Switch</object-name>
        <object-name>switchNut</object-name>
        <object-name>switchCase</object-name>
        <action>
            <button>0</button>
            <binding>
                <command>property-toggle</command>
                <property>/controls/armament/gunsight/computer-on</property>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>k14-gunsight-switch</tooltip-id>
                <label>Gunsight: %s</label>
                <mapping>on-off</mapping>
                <property>/controls/armament/gunsight/computer-on</property>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>knob</type>
        <object-name>GS-brightness</object-name>
        <drag-direction>vertical</drag-direction>
        <drag-scale-px>30</drag-scale-px>
        <property>/controls/armament/gunsight/intensity</property>
        <factor>130.0</factor>
        <offset-deg>-65.0</offset-deg> 
        <center>
            <x-m>0.0475</x-m>
            <y-m>-0.00006</y-m>
            <z-m>0.0</z-m>
        </center>
        <axis>
            <z>-1</z>
        </axis>

        <action>
            <binding>
                <command>property-adjust</command>
                <property>/controls/armament/gunsight/intensity</property>
                <factor>-0.1</factor>
                <min>0</min>
                <max>1</max>
                <wrap>false</wrap>
            </binding>
        </action>

        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>k14-brightness</tooltip-id>
                <label>Brightness: %3d %%</label>
                <measure-text>Brightness: 100 %</measure-text>
                <property>/controls/armament/gunsight/intensity</property>
                <mapping>percent</mapping>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>knob</type>
        <object-name>GS-gyro-fixed</object-name>
        <drag-direction>vertical</drag-direction>
        <drag-scale-px>30</drag-scale-px>
        <property>/controls/armament/gunsight/reticleSelectorPos</property>

        <interpolation>
            <entry>
                <ind>0</ind>
                <dep>90.0</dep>
            </entry>
            <entry>
                <ind>1</ind>
                <dep>0</dep>
            </entry>
            <entry>
                <ind>2</ind>
                <dep>-90.0</dep>
            </entry>
        </interpolation>
        <center>
            <x-m>-0.0474</x-m>
            <y-m>0.000032</y-m>
            <z-m>0.</z-m>
        </center>
        <axis>
            <z>1</z>
        </axis>

        <action>
            <binding>
                <command>property-cycle</command>
                <property>/controls/armament/gunsight/reticleSelectorPos</property>
                <value type="int">2</value>
                <value type="int">1</value>
                <value type="int">0</value>
                <wrap>false</wrap>
            </binding>
        </action>

        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>k14-reticle-selector</tooltip-id>
                <label>Reticle: %s</label>
                <property>/controls/armament/gunsight/reticleSelectorPos</property>
                <mapping>nasal</mapping>
                <script>
                    var modes = ['FIXED', 'FIXED &amp; GYRO', 'GYRO'];
                    return modes[arg[0]];
                </script>
            </binding>
        </hovered>

    </animation>

</PropertyList>
