<?xml version="1.0"?>

<PropertyList>

    <path>K14-gun-sight.ac</path>

    <animation>
        <type>range</type>
        <min-m>0</min-m>
        <max-m>40</max-m>
    </animation>

    <animation>
        <type>material</type>
        <emission>
            <factor-prop>controls/lighting/cabin-norm</factor-prop>
            <red>0.25</red>
            <green>0.12</green>
            <blue>0.12</blue>
        </emission>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>sunShield</object-name>
        <object-name>sunShieldGlass</object-name>
        <factor>95</factor>
        <property>/controls/armament/gunsight/sunScreenDown</property>
        <center>
            <x-m>2.823120</x-m>
            <y-m>0.0</y-m>
            <z-m>0.622599</z-m>
        </center>
        <axis>
            <y>-1</y>
        </axis>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>sunShadeControlLever</object-name>
        <factor>75</factor>
        <property>/controls/armament/gunsight/sunScreenDown</property>
        <center>
            <x-m>2.86652</x-m>
            <y-m>0.0</y-m>
            <z-m>0.5982</z-m>
        </center>
        <axis>
            <y>1</y>
        </axis>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>sunShadeControlLever</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-toggle</command>
                <property>/controls/armament/gunsight/sunScreenDown</property>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>k14-gunsight-sunshade-lever</tooltip-id>
                <label>Sun shield: %s</label>
                <mapping>down-up</mapping>
                <property>/controls/armament/gunsight/sunScreenDown</property>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>mask-lever</object-name>
        <property>/controls/armament/gunsight/mask-off</property>
        <interpolation>
            <entry>
                <ind>0</ind>
                <dep>45</dep>
            </entry>
            <entry>
                <ind>1</ind>
                <dep>0</dep>
            </entry>
        </interpolation>
        <center>
            <x-m> 2.83842</x-m>
            <y-m>-0.06791</y-m>
            <z-m> 0.59220</z-m>
        </center>
        <axis>
            <y>1</y>
        </axis>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>mask-lever</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-toggle</command>
                <property>/controls/armament/gunsight/mask-off</property>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>k14-gunsight-mask-lever</tooltip-id>
                <label>Fixed reticle: %s</label>
                <mapping>on-off</mapping>
                <property>/controls/armament/gunsight/mask-off</property>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>span-lever</object-name>
        <property>/controls/armament/gunsight/span</property>
        <interpolation>
            <entry>
                <ind>30</ind>
                <dep>-56.0</dep>
            </entry>
            <entry>
                <ind>40</ind>
                <dep>-34.0</dep>
            </entry>
            <entry>
                <ind>50</ind>
                <dep>-13.0</dep>
            </entry>
            <entry>
                <ind>60</ind>
                <dep>0.0</dep>
            </entry>
            <entry>
                <ind>70</ind>
                <dep>12.0</dep>
            </entry>
            <entry>
                <ind>80</ind>
                <dep>24.0</dep>
            </entry>
            <entry>
                <ind>90</ind>
                <dep>34.0</dep>
            </entry>
            <entry>
                <ind>100</ind>
                <dep>42.0</dep>
            </entry>
            <entry>
                <ind>110</ind>
                <dep>50.0</dep>
            </entry>
            <entry>
                <ind>120</ind>
                <dep>56.0</dep>
            </entry>
        </interpolation>
        <center>
            <x-m>2.89022</x-m>
            <y-m>0.00050</y-m>
            <z-m>0.57050</z-m>
        </center>
        <axis>
            <x>0.75</x>
            <y>0</y>
            <z>-0.25</z>
        </axis>
    </animation>

    <animation>
        <type>knob</type>
        <object-name>span-scale</object-name>
        <drag-direction>horizontal</drag-direction>
        <drag-scale-px>10</drag-scale-px>
        <action>
            <binding>
                <command>property-adjust</command>
                <property>/controls/armament/gunsight/span</property>
                <factor>-10</factor>
                <min>30</min>
                <max>120</max>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>k14-gunsight-span</tooltip-id>
                <label>Span: %d ft</label>
                <measure-text>Span: 100 ft</measure-text>
                <property>/controls/armament/gunsight/span</property>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>knob</type>
        <object-name>rangeDial</object-name>
        <drag-direction>vertical</drag-direction>
        <drag-scale-px>30</drag-scale-px>
        <property>/controls/armament/gunsight/range</property>
        <interpolation>
            <entry>
                <ind>600</ind>
                <dep>0</dep>
            </entry>
            <entry>
                <ind>650</ind>
                <dep>26</dep>
            </entry>
            <entry>
                <ind>700</ind>
                <dep>49</dep>
            </entry>
            <entry>
                <ind>750</ind>
                <dep>70.5</dep>
            </entry>
            <entry>
                <ind>800</ind>
                <dep>90</dep>
            </entry>
            <entry>
                <ind>850</ind>
                <dep>107</dep>
            </entry>
            <entry>
                <ind>900</ind>
                <dep>123</dep>
            </entry>
            <entry>
                <ind>950</ind>
                <dep>140</dep>
            </entry>
            <entry>
                <ind>1000</ind>
                <dep>154</dep>
            </entry>
            <entry>
                <ind>1100</ind>
                <dep>168</dep>
            </entry>
            <entry>
                <ind>1200</ind>
                <dep>182</dep>
            </entry>
            <entry>
                <ind>1300</ind>
                <dep>194</dep>
            </entry>
            <entry>
                <ind>1400</ind>
                <dep>206</dep>
            </entry>
            <entry>
                <ind>1500</ind>
                <dep>217</dep>
            </entry>
            <entry>
                <ind>1600</ind>
                <dep>228</dep>
            </entry>
            <entry>
                <ind>1700</ind>
                <dep>240.5</dep>
            </entry>
            <entry>
                <ind>1800</ind>
                <dep>252</dep>
            </entry>
            <entry>
                <ind>1900</ind>
                <dep>261</dep>
            </entry>
            <entry>
                <ind>2000</ind>
                <dep>270</dep>
            </entry>
            <entry>
                <ind>2100</ind>
                <dep>282</dep>
            </entry>
            <entry>
                <ind>2200</ind>
                <dep>294</dep>
            </entry>
            <entry>
                <ind>2300</ind>
                <dep>305</dep>
            </entry>
            <entry>
                <ind>2400</ind>
                <dep>315</dep>
            </entry>
        </interpolation>
        <center>
            <x-m>2.84192</x-m>
            <y-m>-0.0762</y-m>
            <z-m>0.53047</z-m>
        </center>
        <axis>
            <y>-1</y>
        </axis>
        <action>
            <binding>
                <command>property-adjust</command>
                <property>/controls/armament/gunsight/range</property>
                <factor>50</factor>
                <min>600</min>
                <max>2400</max>
                <wrap>false</wrap>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>k14-gunsight-range</tooltip-id>
                <label>Range: %d ft</label>
                <measure-text>Range: 1000 ft</measure-text>
                <property>/controls/armament/gunsight/range</property>
            </binding>
        </hovered>
    </animation>

    <effect>
        <inherits-from>Effects/model-transparent</inherits-from>
        <condition>
            <property>/sim/rendering/rembrandt/enabled</property>
        </condition>
        <object-name>reflector-plate</object-name>
        <object-name>sunShieldGlass</object-name>
    </effect>

    <effect>
        <inherits-from>Aircraft/p51d/Models/Effects/interior/interior</inherits-from>
        <object-name>k14-main-body</object-name>
        <object-name>mask-lever</object-name>
        <object-name>rangeDial</object-name>
        <object-name>reflector-plate</object-name>
        <object-name>span-lever</object-name>
        <object-name>span-scale</object-name>
        <object-name>sunShadeControlLever</object-name>
        <object-name>sunShield</object-name>
        <object-name>sunShieldGlass</object-name>
    </effect>

</PropertyList>
