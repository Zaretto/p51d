<?xml version="1.0"?>
<PropertyList>

 <path>rudderTrimKnob.ac</path>

 <animation>
  <type>knob</type>
  <drag-direction>horizontal</drag-direction>
  <drag-scale-px>10.0</drag-scale-px>
  <object-name>trimKnob</object-name>
  <property>/controls/flight/rudder-trim</property>
  <factor>1440</factor>
  <axis>
   <z>-1</z>
  </axis>
         <action>
             <binding>
                 <command>property-adjust</command>
                 <property>/controls/flight/rudder-trim</property>
                 <factor>0.001</factor>
                 <min>-1</min>
                 <max>1</max>
                 <wrap>0</wrap>
             </binding>
         </action>
         <hovered>
             <binding>
                 <command>set-tooltip</command>
                 <tooltip-id>rudder-trim</tooltip-id>
                 <measure-text>Rudder trim: -10.00 deg</measure-text>
                 <label>Rudder trim: %.2f deg</label>
                 <property>/controls/flight/rudder-trim</property>
                 <mapping>nasal</mapping>
                 <script>
                    var max_rudder_trim = 10.0;
                    return arg[0] * max_rudder_trim;
                 </script>
             </binding>
         </hovered>
    </animation>

 <animation>
  <type>rotate</type>
  <object-name>Needle</object-name>
  <property>/controls/flight/rudder-trim</property>
  <factor>36.0</factor>
  <axis>
   <z>-1</z>
  </axis>
 </animation>

</PropertyList>
