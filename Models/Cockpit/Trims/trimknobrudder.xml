<?xml version="1.0"?>
<PropertyList>

 <path>rudderTrimKnob.ac</path>

 <animation>
  <type>knob</type>
  <drag-direction>horizontal</drag-direction>
  <drag-scale-px>10.0</drag-scale-px>
  <object-name>trimKnob</object-name>
  <property>/controls/flight/rudder-trim</property>
  <factor>1440</factor>
  <axis>
   <z>-1</z>
  </axis>
         <action>
             <binding>
                 <command>property-adjust</command>
                 <property>/controls/flight/rudder-trim</property>
                 <factor>0.002</factor>
                 <min>-1</min>
                 <max>1</max>
                 <wrap>0</wrap>
             </binding>
         </action>
         <hovered>
             <binding>
                 <command>set-tooltip</command>
                 <tooltip-id>rudder-trim</tooltip-id>
                 <label>Rudder trim: %.3f</label>
                 <property>/controls/flight/rudder-trim</property>
             </binding>
         </hovered>
    </animation>

 <animation>
  <type>rotate</type>
  <object-name>Needle</object-name>
  <property>controls/flight/rudder-trim</property>
  <interpolation>
   <entry>
    <ind>-1.0</ind>
    <dep>-45</dep>
   </entry>
   <entry>
    <ind>0</ind>
    <dep>0</dep>
   </entry>
   <entry>
    <ind>1.0</ind>
    <dep>45</dep>
   </entry>
  </interpolation>
  <axis>
   <z>-1</z>
  </axis>
 </animation>

</PropertyList>
