<?xml version="1.0"?>
<PropertyList>

 <path>elevatorTrimWheel.ac</path>

 <animation>
  <type>knob</type>
  <drag-direction>vertical</drag-direction>
  <drag-scale-px>10.0</drag-scale-px>
  <object-name>elevatorTrimWheel</object-name>
  <property>/aircraft/surface-positions/pitch-trim-pos-norm</property>
  <factor>1440</factor>
  <axis>
   <y>1</y>
  </axis>
         <action>
             <binding>
                 <command>property-adjust</command>
                 <property>/controls/flight/elevator-trim</property>
                 <factor>-0.0004</factor>
                 <min>-0.4</min>
                 <max>1.0</max>
                 <wrap>0</wrap>
             </binding>
         </action>
         <hovered>
             <binding>
                 <command>set-tooltip</command>
                 <tooltip-id>elevator-trim</tooltip-id>
                 <measure-text>Elevator trim: -25.00 deg</measure-text>
                 <label>Elevator trim: %.2f deg</label>
                 <property>/aircraft/surface-positions/pitch-trim-pos-norm</property>
                 <mapping>nasal</mapping>
                 <script>
                     var max_elevator_trim = -25.0;
                     return arg[0] * max_elevator_trim;
                 </script>
             </binding>
         </hovered>
     </animation>

 <animation>
  <type>rotate</type>
  <object-name>Needle</object-name>
  <property>/aircraft/surface-positions/pitch-trim-pos-norm</property>
  <factor>70.0</factor>
  <offset-deg>-20.0</offset-deg>
  <axis>
   <y>1</y>
  </axis>
 </animation>

</PropertyList>
