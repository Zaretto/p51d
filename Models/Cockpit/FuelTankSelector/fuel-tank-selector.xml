<?xml version="1.0"?>
<PropertyList>

    <path>fuel-tank-selector.ac</path>

    <!--
        tanks are:
         tank    left wing tank
         tank[1] right wing tank
         tank[2] fuselage tank
         tank[3] left wing drop tank
         tank[4] right wing drop tank
    -->

    <animation>
        <type>knob</type>
        <drag-direction>horizontal</drag-direction>
        <drag-scale-px>30.0</drag-scale-px>
        <object-name>handle</object-name>
        <property>/controls/fuel/tank-selector</property>
        <interpolation>
            <entry>
                <ind>0</ind>
                <dep>109</dep>
            </entry>
            <entry>
                <ind>1</ind>
                <dep>252.6</dep>
            </entry>
            <entry>
                <ind>2</ind>
                <dep>180</dep>
            </entry>
            <entry>
                <ind>3</ind>
                <dep>328.5</dep>
            </entry>
            <entry>
                <ind>4</ind>
                <dep>31.4</dep>
            </entry>
        </interpolation>
        <center>
            <x-m>-0.001</x-m>
            <y-m>0.0001</y-m>
            <z-m>0.002</z-m>
        </center>
        <axis>
            <x>0.72</x>
            <y>0.03</y>
            <z>0.95</z>
        </axis>
         <action>
             <binding>
                 <command>property-cycle</command>
                 <property>/controls/fuel/tank-selector</property>
                 <value type="int">1</value>
                 <value type="int">2</value>
                 <value type="int">0</value>
                 <value type="int">4</value>
                 <value type="int">3</value>
                 <wrap>false</wrap>
             </binding>
         </action>
         <hovered>
             <binding>
                 <command>set-tooltip</command>
                 <tooltip-id>fuel-tank-selector</tooltip-id>
                 <label>Selected fuel tank: %s</label>
                 <mapping>nasal</mapping>
                 <script>
                     var modes = ['LEFT MAIN', 'RIGHT MAIN', 'FUSELAGE', 'LEFT DROP', 'RIGHT DROP'];
                     return modes[arg[0]];
                 </script>
                 <property>/controls/fuel/tank-selector</property>
             </binding>
         </hovered>
    </animation>

    <animation>
        <type>knob</type>
        <drag-direction>vertical</drag-direction>
        <drag-scale-px>30.0</drag-scale-px>
        <object-name>FuelOffLever</object-name>
        <property>/controls/fuel/on</property>
        <interpolation>
            <entry>
                <ind>1</ind>
                <dep>0</dep>
            </entry>
            <entry>
                <ind>0</ind>
                <dep>60</dep>
            </entry>
        </interpolation>
        <center>
            <x-m>-0.03</x-m>
            <y-m>0.00</y-m>
            <z-m>-0.035</z-m>
        </center>
        <axis>
            <y>1</y>
        </axis>
        <action>
             <binding>
                 <command>property-cycle</command>
                 <property>/controls/fuel/on</property>
                 <value type="bool">false</value>
                 <value type="bool">true</value>
                 <wrap>false</wrap>
             </binding>
         </action>
         <hovered>
             <binding>
                 <command>set-tooltip</command>
                 <tooltip-id>fuel-shut-off</tooltip-id>
                 <label>Fuel shut off: %s</label>
                 <mapping>on-off</mapping>
                 <property>/controls/fuel/on</property>
             </binding>
         </hovered>
    </animation>

    <animation>
        <type>material</type>
        <object-name>FuelOffLever</object-name>
        <object-name>tankSelectorBody</object-name>
        <object-name>handle</object-name>
        <emission>
            <factor-prop>controls/lighting/cabin-norm</factor-prop>
            <red>0.20</red>
            <green>0.1</green>
            <blue>0.1</blue>
        </emission>
    </animation>

</PropertyList>
