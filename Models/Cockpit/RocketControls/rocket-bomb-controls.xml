<?xml version="1.0"?>
<PropertyList>

 <path>weapons-controls.ac</path>

 <animation>
  <type>rotate</type>
  <object-name>rocket-reset-knob</object-name>
  <property>/controls/armament/next-RX</property>
  <interpolation>
   <entry>
    <ind>1</ind>
    <dep>0</dep>
   </entry>
   <entry>
    <ind>2</ind>
    <dep>32.7</dep>
   </entry>
   <entry>
    <ind>3</ind>
    <dep>65.5</dep>
   </entry>
   <entry>
    <ind>4</ind>
    <dep>105</dep>
   </entry>
   <entry>
    <ind>5</ind>
    <dep>140</dep>
   </entry>
   <entry>
    <ind>6</ind>
    <dep>176</dep>
   </entry>
   <entry>
    <ind>7</ind>
    <dep>211</dep>
   </entry>
   <entry>
    <ind>8</ind>
    <dep>246.1</dep>
   </entry>
   <entry>
    <ind>9</ind>
    <dep>295</dep>
   </entry>
   <entry>
    <ind>10</ind>
    <dep>329</dep>
   </entry>
  </interpolation>
   <center>
   <x-m>-0.00</x-m>
   <y-m>-0.0415</y-m>
   <z-m>-0.0273</z-m>
  </center>
  <axis>
   <x>0.9</x>
   <y>0.0025</y>
   <z>0.1</z>
  </axis>
 </animation>

    <animation>
        <type>knob</type>
        <drag-direction>horizontal</drag-direction>
        <drag-scale-px>30.0</drag-scale-px>
        <object-name>single-auto-knob</object-name>
        <property>/controls/armament/rocket-controler</property>
        <interpolation>
            <entry>
                <ind>0</ind>
                <dep>0</dep>
            </entry>
            <entry>
                <ind>1</ind>
                <dep>-37</dep>
            </entry>
            <entry>
                <ind>2</ind>
                <dep>-80</dep>
            </entry>
        </interpolation>
        <center>
            <x-m>-0.00</x-m>
            <y-m>-0.084</y-m>
            <z-m>0.031</z-m>
        </center>
        <axis>
            <x>1</x>
        </axis>
        <action>
            <binding>
                <command>property-adjust</command>
                <property>/controls/armament/rocket-controler</property>
                <min>0</min>
                <max>2</max>
                <wrap>false</wrap>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>rocket-controller</tooltip-id>
                <label>Rocket controller: %s</label>
                <mapping>nasal</mapping>
                <script>
                    var modes = ['OFF', 'SINGLE', 'AUTO'];
                    return modes[arg[0]];
                </script>
                <property>/controls/armament/rocket-controler</property>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>left-arm-switch</object-name>
        <property>/controls/armament/left-bomb-arm-chem-release</property>
        <interpolation>
            <entry>
                <ind>0</ind>
                <dep>0</dep>
            </entry>
            <entry>
                <ind>-1</ind>
                <dep>-25</dep>
            </entry>
            <entry>
                <ind>1</ind>
                <dep>25</dep>
            </entry>
        </interpolation>
        <center>
            <x-m>-0.008</x-m>
            <y-m>0.00</y-m>
            <z-m>0.09</z-m>
        </center>
        <axis>
            <y>-1</y>
        </axis>
    </animation>

    <!-- Spring-loaded for RELEASE position (page 63 of F-51D handbook) -->
    <animation>
        <type>pick</type>
        <drag-direction>vertical</drag-direction>
        <drag-scale-px>30.0</drag-scale-px>
        <object-name>left-arm-switch</object-name>
        <object-name>left-arm-sw-base</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <condition>
                    <equals>
                        <property>/controls/armament/left-bomb-arm-chem-release</property>
                        <value>0</value>
                    </equals>
                </condition>
                <command>property-assign</command>
                <property>/controls/armament/left-bomb-arm-chem-release</property>
                <value>1</value>
            </binding>
            <mod-up>
                <binding>
                    <condition>
                        <equals>
                            <property>/controls/armament/left-bomb-arm-chem-release</property>
                            <value>1</value>
                        </equals>
                    </condition>
                    <command>property-assign</command>
                    <property>/controls/armament/left-bomb-arm-chem-release</property>
                    <value>0</value>
                </binding>
            </mod-up>
        </action>
    </animation>

    <animation>
        <type>knob</type>
        <drag-direction>vertical</drag-direction>
        <drag-scale-px>30.0</drag-scale-px>
        <object-name>left-arm-switch</object-name>
        <object-name>left-arm-sw-base</object-name>
        <action>
            <binding>
                <command>property-cycle</command>
                <property>/controls/armament/left-bomb-arm-chem-release</property>
                <value type="int">-1</value>
                <value type="int">0</value>
                <wrap>false</wrap>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>left-bomb-arm</tooltip-id>
                <label>Left bomb/chemical: %s</label>
                <mapping>nasal</mapping>
                <script>
                    var modes = ['ARM', 'OFF', 'RELEASE'];
                    return modes[arg[0]+1];
                </script>
                <property>/controls/armament/left-bomb-arm-chem-release</property>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>right-arm-switch</object-name>
        <property>/controls/armament/right-bomb-arm-chem-release</property>
        <interpolation>
            <entry>
                <ind>0</ind>
                <dep>0</dep>
            </entry>
            <entry>
                <ind>-1</ind>
                <dep>-25</dep>
            </entry>
            <entry>
                <ind>1</ind>
                <dep>25</dep>
            </entry>
        </interpolation>
        <center>
            <x-m>-0.008</x-m>
            <y-m>0.00</y-m>
            <z-m>0.09</z-m>
        </center>
        <axis>
            <y>-1</y>
        </axis>
    </animation>

    <!-- Spring-loaded for RELEASE position (page 63 of F-51D handbook) -->
    <animation>
        <type>pick</type>
        <drag-direction>vertical</drag-direction>
        <drag-scale-px>30.0</drag-scale-px>
        <object-name>right-arm-switch</object-name>
        <object-name>right-arm-sw-base</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <condition>
                    <equals>
                        <property>/controls/armament/right-bomb-arm-chem-release</property>
                        <value>0</value>
                    </equals>
                </condition>
                <command>property-assign</command>
                <property>/controls/armament/right-bomb-arm-chem-release</property>
                <value>1</value>
            </binding>
            <mod-up>
                <binding>
                    <condition>
                        <equals>
                            <property>/controls/armament/right-bomb-arm-chem-release</property>
                            <value>1</value>
                        </equals>
                    </condition>
                    <command>property-assign</command>
                    <property>/controls/armament/right-bomb-arm-chem-release</property>
                    <value>0</value>
                </binding>
            </mod-up>
        </action>
    </animation>

    <animation>
        <type>knob</type>
        <drag-direction>vertical</drag-direction>
        <drag-scale-px>30.0</drag-scale-px>
        <object-name>right-arm-switch</object-name>
        <object-name>right-arm-sw-base</object-name>
        <action>
            <binding>
                <command>property-cycle</command>
                <property>/controls/armament/right-bomb-arm-chem-release</property>
                <value type="int">-1</value>
                <value type="int">0</value>
                <wrap>false</wrap>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>right-bomb-arm</tooltip-id>
                <label>Right bomb/chemical: %s</label>
                <mapping>nasal</mapping>
                <script>
                    var modes = ['ARM', 'OFF', 'RELEASE'];
                    return modes[arg[0]+1];
                </script>
                <property>/controls/armament/right-bomb-arm-chem-release</property>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>instant-switch</object-name>
        <property>/controls/armament/instant</property>
        <interpolation>
            <entry>
                <ind>0</ind>
                <dep>25</dep>
            </entry>
            <entry>
                <ind>1</ind>
                <dep>-25</dep>
            </entry>
        </interpolation>
        <center>
            <x-m>0.002</x-m>
            <y-m>-0.014</y-m>
            <z-m>-0.09</z-m>
        </center>
        <axis>
            <z>-1</z>
        </axis>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>instant-sw-body</object-name>
        <object-name>instant-switch</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-toggle</command>
                <property>/controls/armament/instant</property>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>rockets-release</tooltip-id>
                <label>Rocket fuse: %s</label>
                <mapping>nasal</mapping>
                <script>
                    var modes = ['DELAY', 'INSTANT'];
                    return modes[arg[0]];
                </script>
                <property>/controls/armament/instant</property>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>knob</type>
        <drag-direction>vertical</drag-direction>
        <drag-scale-px>30.0</drag-scale-px>
        <object-name>weapons-select-sw</object-name>
        <object-name>weapons-sel-sw-base</object-name>
        <action>
            <binding>
                <command>property-cycle</command>
                <property>/controls/armament/weapons-select</property>
                <value type="int">1</value>
                <value type="int">2</value>
                <value type="int">0</value>
                <value type="int">3</value>
                <wrap>false</wrap>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>weapons-select</tooltip-id>
                <label>Selected weapons: %s</label>
                <mapping>nasal</mapping>
                <script>
                    var modes = ['SAFE', 'BOMBS BOTH', 'BOMBS TRAIN', 'ROCKETS'];
                    return modes[arg[0]];
                </script>
                <property>/controls/armament/weapons-select</property>
            </binding>
        </hovered>
    </animation>

  <animation>
    <type>rotate</type>
    <object-name>weapons-select-sw</object-name>
    <property>/controls/armament/rockets</property>
    <interpolation>
        <entry>
            <ind>0</ind>
            <dep>0</dep>
        </entry>
        <entry>
            <ind>1</ind>
            <dep>25</dep>
        </entry>
    </interpolation>
    <center>
        <x-m>-0.004</x-m>
        <y-m>-0.02</y-m>
        <z-m>0.09</z-m>
    </center>
    <axis>
        <x>0</x>
        <y>-1</y>
        <z>-0</z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>weapons-select-sw</object-name>
    <property>/controls/armament/bombs-train</property>
    <interpolation>
        <entry>
            <ind>0</ind>
            <dep>0</dep>
        </entry>
        <entry>
            <ind>1</ind>
            <dep>40</dep>
        </entry>
    </interpolation>
    <center>
        <x-m>-0.009</x-m>
        <y-m>-0.026</y-m>
        <z-m>0.147</z-m>
    </center>
    <axis>
       <x>0.0</x>
       <y>0.866</y>
       <z>0.6</z>
    </axis>
  </animation>

   <animation>
    <type>rotate</type>
    <object-name>weapons-select-sw</object-name>
    <property>/controls/armament/bombs-both</property>
    <interpolation>
        <entry>
            <ind>0</ind>
            <dep>0</dep>
        </entry>
        <entry>
            <ind>1</ind>
            <dep>-40</dep>
        </entry>
    </interpolation>
    <center>
        <x-m>-0.008</x-m>
        <y-m>-0.018</y-m>
        <z-m>0.035</z-m>
    </center>
    <axis>
       <x>-0.012</x>
       <y>-0.866</y>
       <z>0.6</z>
    </axis>
  </animation>

 <animation>
    <type>material</type>
       <object-name>left-arm-switch</object-name>
       <object-name>right-arm-switch</object-name>
       <object-name>weapons-select-switch</object-name>
       <object-name>instant-switch</object-name>
       <object-name>instant-sw-body</object-name>
       <object-name>weapons-select-sw</object-name>
       <object-name>weapons-sel-sw-base</object-name>
       <object-name>left-arm-sw-base</object-name>
       <object-name>right-arm-sw-base</object-name>
       <emission>
          <factor-prop>controls/lighting/cabin-norm</factor-prop>
             <red>0.2</red>
             <green>0.1</green>
             <blue>0.1</blue>
       </emission>
  </animation>

  <animation>
    <type>material</type>
       <object-name>rocket-reset-knob_1</object-name>
       <object-name>rocket-controls-panel</object-name>
       <object-name>rocket-bomb-face</object-name>
       <object-name>single-auto-knob</object-name>
       <emission>
          <factor-prop>controls/lighting/cabin-norm</factor-prop>
             <red>0.25</red>
             <green>0.15</green>
             <blue>0.15</blue>
       </emission>
  </animation>

  <animation>
    <type>material</type>
       <object-name>rocket-reset-knob_0</object-name>
       <emission>
          <factor-prop>controls/lighting/cabin-norm</factor-prop>
             <red>0.35</red>
             <green>0.18</green>
             <blue>0.18</blue>
       </emission>
  </animation>

</PropertyList>
