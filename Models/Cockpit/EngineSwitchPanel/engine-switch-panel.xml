<?xml version="1.0"?>
<PropertyList>

 <path>engine-switch-panel.ac</path>

 <animation>
  <type>select</type>
  <object-name>BoostBulb</object-name>
  <condition>
        <property>controls/engines/engine/boost-light-on</property>
   </condition>
 </animation>

    <animation>
        <type>pick</type>
        <object-name>boost-switch</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <condition>
                    <equals>
                        <property>/controls/engines/engine/supercharger-switch</property>
                        <value>-1</value>
                    </equals>
                </condition>
                <command>property-assign</command>
                <property>/controls/engines/engine/supercharger-switch</property>
                <value>1</value>
            </binding>
            <mod-up>
                <binding>
                    <condition>
                        <equals>
                            <property>/controls/engines/engine/supercharger-switch</property>
                            <value>1</value>
                        </equals>
                    </condition>
                    <command>property-assign</command>
                    <property>/controls/engines/engine/supercharger-switch</property>
                    <value>-1</value>
                </binding>
            </mod-up>
        </action>
    </animation>

    <animation>
        <type>knob</type>
        <drag-direction>vertical</drag-direction>
        <drag-scale-px>30.0</drag-scale-px>
        <object-name>boost-switch</object-name>
        <property>/controls/engines/engine/supercharger-switch</property>
        <interpolation>
            <entry>
                <ind>0</ind>
                <dep>-25</dep>
            </entry>
            <entry>
                <ind>-1</ind>
                <dep>0</dep>
            </entry>
            <entry>
                <ind>1</ind>
                <dep>25</dep>
            </entry>
        </interpolation>
        <axis>
            <y>-1</y>
        </axis>
        <action>
            <binding>
                <command>property-cycle</command>
                <property>/controls/engines/engine/supercharger-switch</property>
                <value type="int">0</value>
                <value type="int">-1</value>
                <wrap>false</wrap>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>supercharger-switch</tooltip-id>
                <label>Supercharger: %s</label>
                <mapping>nasal</mapping>
                <script>
                    var modes = ['LOW (better range at high altitude)', 'AUTO', 'HIGH'];
                    return modes[arg[0]+1];
                </script>
                <property>/controls/engines/engine/supercharger-switch</property>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>boost-sw-guard</object-name>
        <property>/controls/engines/engine/supercharger-guard-switch</property>
        <factor>-120.0</factor>
        <center>
            <x-m>0.0089</x-m>
            <y-m>-0.05958</y-m>
            <z-m>0.01860</z-m>
        </center>
        <axis>
            <y>1</y>
        </axis>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>boost-sw-guard</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-toggle</command>
                <property>/controls/engines/engine/supercharger-guard-switch</property>
            </binding>
        </action>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>starter-switch</object-name>
        <property>/fdm/jsbsim/systems/engine/starter</property>
        <interpolation>
            <entry>
                <ind>0</ind>
                <dep>-25</dep>
            </entry>
            <entry>
                <ind>1</ind>
                <dep>25</dep>
            </entry>
        </interpolation>
        <axis>
            <y>-1</y>
        </axis>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>starter-switch</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-toggle</command>
                <property>/fdm/jsbsim/systems/engine/starter</property>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>starter-switch</tooltip-id>
                <label>Starter: %s</label>
                <mapping>on-off</mapping>
                <property>/fdm/jsbsim/systems/engine/starter</property>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>starter-sw-guard</object-name>
        <property>/controls/engines/engine/starter-guard-switch</property>
        <factor>-120.0</factor>
        <center>
            <x-m>0.0089</x-m>
            <y-m>0.04512</y-m>
            <z-m>0.01860</z-m>
        </center>
        <axis>
            <y>1</y>
        </axis>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>starter-sw-guard</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-toggle</command>
                <property>/controls/engines/engine/starter-guard-switch</property>
            </binding>
        </action>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>primer-switch</object-name>
        <property>/controls/engines/engine/primer-on</property>
        <interpolation>
            <entry>
                <ind>0</ind>
                <dep>-25</dep>
            </entry>
            <entry>
                <ind>1</ind>
                <dep>25</dep>
            </entry>
        </interpolation>
        <axis>
            <y>-1</y>
        </axis>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>primer-switch</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-toggle</command>
                <property>/controls/engines/engine/primer-on</property>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>primer-switch</tooltip-id>
                <label>Primer: %s</label>
                <mapping>on-off</mapping>
                <property>/controls/engines/engine/primer-on</property>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>primer-sw-guard</object-name>
        <property>/controls/engines/engine/primer-guard-switch</property>
        <factor>-120.0</factor>
        <center>
            <x-m>0.0089</x-m>
            <y-m>0.06843</y-m>
            <z-m>0.01860</z-m>
        </center>
        <axis>
            <y>1</y>
        </axis>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>primer-sw-guard</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-toggle</command>
                <property>/controls/engines/engine/primer-guard-switch</property>
            </binding>
        </action>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>fuel-pump-switch</object-name>
        <property>/fdm/jsbsim/propulsion/fuel_pump</property>
        <interpolation>
            <entry>
                <ind>0</ind>
                <dep>-25</dep>
            </entry>
            <entry>
                <ind>1</ind>
                <dep>25</dep>
            </entry>
        </interpolation>
        <axis>
            <y>-1</y>
        </axis>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>fuel-pump-switch</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-toggle</command>
                <property>/fdm/jsbsim/propulsion/fuel_pump</property>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>fuel-pump-switch</tooltip-id>
                <label>Fuel pump: %s</label>
                <mapping>on-off</mapping>
                <property>/fdm/jsbsim/propulsion/fuel_pump</property>
            </binding>
        </hovered>
    </animation>
 
 <animation>
  <type>material</type>
  <object-name>engine-sw-plate</object-name>
  <object-name>BoostLightButton</object-name>
  <emission>
    <factor-prop>controls/lighting/cabin-norm</factor-prop>
    <red>0.28</red>
    <green>0.18</green>
    <blue>0.18</blue>
  </emission>
 </animation>

 <animation>
  <type>material</type>
  <object-name>blower-speed-body</object-name>
  <object-name>boost-switch</object-name>
  <object-name>dilute-sw-body</object-name>
  <object-name>oil-dilute-switch</object-name>
  <object-name>fuel-pump-body</object-name>
  <object-name>fuel-pump-switch</object-name>
  <object-name>primer-switch</object-name>
  <object-name>primer-sw-body</object-name>
  <object-name>start-switch-body</object-name>
  <object-name>starter-switch</object-name>
  <emission>
    <factor-prop>controls/lighting/cabin-norm</factor-prop>
    <red>0.2</red>
    <green>0.12</green>
    <blue>0.12</blue>
  </emission>
 </animation>

 <animation>
  <type>material</type>
  <object-name>boost-sw-guard</object-name>
  <object-name>primer-sw-guard</object-name>
  <object-name>starter-sw-guard</object-name>
  <emission>
    <factor-prop>controls/lighting/cabin-norm</factor-prop>
    <red>0.2</red>
    <green>0.0</green>
    <blue>0.0</blue>
  </emission>
 </animation>

    <animation>
        <type>pick</type>
        <object-name>BoostBulb</object-name>
        <object-name>BoostLightButton</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-assign</command>
                <property>/controls/engines/engine/blower-light-check</property>
                <value>1</value>
            </binding>
            <mod-up>
                <binding>
                    <command>property-assign</command>
                    <property>/controls/engines/engine/blower-light-check</property>
                    <value>0</value>
                </binding>
            </mod-up>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>blower-light-check</tooltip-id>
                <label>High blower: %s</label>
                <mapping>on-off</mapping>
                <property>/controls/engines/engine/boost-light-on</property>
            </binding>
        </hovered>
    </animation>

</PropertyList>
