<?xml version="1.0"?>
<PropertyList>

<path>P-51D-cockpit.ac</path>

    <params>
        <aileron>/aircraft/surface-positions/aileron-pos-norm</aileron>
        <elevator>/aircraft/surface-positions/elevator-pos-norm</elevator>
        <rudder>/aircraft/surface-positions/rudder-pos-norm</rudder>
    </params>

    <animation>
        <type>range</type>
        <min-m>0</min-m>
        <max-m>1000</max-m>
    </animation>    
   
    <animation>
        <type>knob</type>
        <drag-direction>horizontal</drag-direction>
        <drag-scale-px>30.0</drag-scale-px>
        <object-name>ReostatKnob</object-name>
        <property>/controls/lighting/cabin-norm</property>
        <factor>270.0</factor>
        <axis>
            <x1-m>2.5875</x1-m>
            <y1-m>0.086829</y1-m>
            <z1-m>-0.027584</z1-m>
            <x2-m>2.5783</x2-m>
            <y2-m>0.087026</y2-m>
            <z2-m>-0.030676</z2-m>
        </axis>
        <action>
            <binding>
                <command>property-adjust</command>
                <property>/controls/lighting/cabin-norm</property>
                <factor>0.1</factor>
                <min>0</min>
                <max>1</max>
                <wrap>false</wrap>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>cabin-lighting</tooltip-id>
                <label>Cabin lighting: %3d %%</label>
                <measure-text>Cabin lighting: 100 %</measure-text>
                <mapping>percent</mapping>
                <property>/controls/lighting/cabin-norm</property>
            </binding>
        </hovered>
    </animation>
 
 <animation>
  <type>translate</type>
  <object-name>Trigger2</object-name>
  <property>controls/armament/trigger2</property>
  <interpolation>
   <entry>
    <ind>0.0</ind>
    <dep>0</dep>
   </entry>
   <entry>
    <ind>1.0</ind>
    <dep>-0.01</dep>
   </entry>
  </interpolation>
  <axis>
   <x>0.0</x>
   <y>0.0</y>
   <z>1.0</z>
  </axis>
 </animation>
 
 <animation>
  <type>rotate</type>
  <object-name>Trigger2</object-name>
  <object-name>Stick</object-name>
  <object-name>BootTransition</object-name>
  <object-name>BootTop</object-name>
  <property alias="/params/aileron"/>
  <factor>-10</factor>
  <center>
   <x-m>2.90042</x-m>
   <y-m>0.00</y-m>
   <z-m>-0.34</z-m>
  </center>
  <axis>
   <x>1.0</x>
  </axis>
 </animation> 

 <animation>
  <type>rotate</type>
  <object-name>Stick</object-name>
  <object-name>Trigger2</object-name>
  <object-name>BootTransition</object-name>
  <object-name>BootTop</object-name>
  <property alias="/params/elevator"/>
  <factor>-20</factor>
  <!-- In forward position, hand grip will be two inches from instrument panel (maintenance manual, section IV, page 94) -->
  <offset-deg>-10.0</offset-deg>
  <center>
   <x-m>2.90042</x-m>
   <y-m>0.00</y-m>
   <z-m>-0.34</z-m>
  </center>
  <axis>
   <y>1.0</y>
  </axis>
 </animation>

 <animation>
  <type>translate</type>
  <object-name>LeftRudderPedal</object-name>
  <property alias="/params/rudder"/>
  <factor>0.04</factor>
  <axis>
   <x>1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>LeftRudderPedal</object-name>
  <property>controls/gear/brake-left</property>
  <factor>-5.0</factor>
  <axis>
   <x>0</x>
   <y>1</y>
   <z>0</z>
  </axis>
  <center>
   <x-m>2.5081</x-m>
   <y-m>0</y-m>
   <z-m>-0.29123</z-m>
  </center>  
 </animation>

 <animation>
  <type>translate</type>
  <object-name>RightRudderPedal</object-name>
  <property alias="/params/rudder"/>
  <factor>-0.04</factor>
  <axis>
   <x>1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>RightRudderPedal</object-name>
  <property>controls/gear/brake-right</property>
  <factor>-5.0</factor>
  <axis>
   <x>0</x>
   <y>1</y>
   <z>0</z>
  </axis>
  <center>
   <x-m>2.5081</x-m>
   <y-m>0</y-m>
   <z-m>-0.29123</z-m>
  </center>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>RightRudderCarage</object-name>
  <property alias="/params/rudder"/>
  <factor>8.45</factor>
  <axis>
   <x>0</x>
   <y>1</y>
   <z>0</z>
  </axis>
  <center>
   <x-m>2.5075</x-m>
   <y-m>0</y-m>
   <z-m>-0.02587</z-m>
  </center>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>LeftRudderCarage</object-name>
  <property alias="/params/rudder"/>
  <factor>-8.45</factor>
  <axis>
   <x>0</x>
   <y>1</y>
   <z>0</z>
  </axis>
  <center>
   <x-m>2.5075</x-m>
   <y-m>0</y-m>
   <z-m>-0.02587</z-m>
  </center>
 </animation>
 
 <animation>
    <type>pick</type>
    <object-name>gearLeverForward</object-name>
    <action>
    <button>0</button>
    <binding>
        <command>property-toggle</command>
        <property>/controls/gear/gear-down</property>
    </binding>
   </action>
  </animation>

  <animation>
    <type>rotate</type>
      <object-name>gearLeverForward</object-name>
      <object-name>gearLeverHardware</object-name>
    <property>/aircraft/controls/lever-pos-norm</property>
    <interpolation>
    <entry>
        <ind>0.0</ind>
        <dep>0</dep>
    </entry>
    <entry>
        <ind>0.05</ind>
        <dep>5</dep>
    </entry>
    <entry>
        <ind>0.95</ind>
        <dep>5</dep>
    </entry>
    <entry>
        <ind>1.0</ind>
        <dep>0</dep>
    </entry>
    </interpolation>
    <center>
        <x-m>2.8129</x-m>
        <y-m>-0.2662</y-m>
        <z-m>-0.2437</z-m>
    </center>
    <axis>
        <z>-1.0</z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>    
    <object-name>gearLeverForward</object-name>
    <object-name>gearLeverHardware</object-name>
    <object-name>gearLeverRear</object-name>
    <property>/aircraft/controls/lever-pos-norm</property>
    <factor>-38</factor>
    <offset-deg>38</offset-deg>
    <center>
        <x-m>2.8769</x-m>
        <y-m>-0.287185</y-m>
        <z-m>-0.26492</z-m>
    </center>
    <axis>
        <y>1.0</y>
    </axis>
  </animation>
  
  
 <animation>
  <type>knob</type>
  <drag-direction>vertical</drag-direction>
  <drag-scale-px>30.0</drag-scale-px>
  <object-name>ram-air</object-name>
  <property>/fdm/jsbsim/systems/engine/ram-air-control</property>
  <min>0</min>
  <max>1</max>
  <interpolation>
   <entry>
    <ind>1</ind>
    <dep>0</dep>
   </entry>
   <entry>
    <ind>0</ind>
    <dep>40</dep>
   </entry>
  </interpolation>
  <axis>
   <y>1</y>
  </axis>
  <center>
   <x-m>3.0884</x-m>
   <y-m>0.000</y-m>
   <z-m>-0.10279</z-m>
  </center>
        <action>
            <binding>
                <command>property-cycle</command>
                <property>/fdm/jsbsim/systems/engine/ram-air-control</property>
                <value type="double">0</value>
                <value type="double">1</value>
                <wrap>false</wrap>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>carb-air-filter</tooltip-id>
                <label>Carburetor air: %s</label>
                <mapping>nasal</mapping>
                <script>
                    var modes = ['FILTERED', 'RAM AIR'];
                    return modes[arg[0]];
                </script>
                <property>/fdm/jsbsim/systems/engine/ram-air-control</property>
            </binding>
        </hovered>
    </animation>

 <animation>
  <type>knob</type>
  <drag-direction>vertical</drag-direction>
  <drag-scale-px>30.0</drag-scale-px>
  <object-name>hot-air</object-name>
  <property>/controls/anti-ice/engine/inlet-heat</property>
  <min>0</min>
  <max>1</max>
  <interpolation>
   <entry>
    <ind>0</ind>
    <dep>0</dep>
   </entry>
   <entry>
    <ind>1</ind>
    <dep>22</dep>
   </entry>
  </interpolation>
  <axis>
   <y>1</y>
  </axis>
  <center>
   <x-m>3.0884</x-m>
   <y-m>0.000</y-m>
   <z-m>-0.10279</z-m>
  </center>
         <action>
             <binding>
                 <command>property-cycle</command>
                 <property>/controls/anti-ice/engine/inlet-heat</property>
                 <value type="bool">true</value>
                 <value type="bool">false</value>
                 <wrap>false</wrap>
             </binding>
         </action>
         <hovered>
             <binding>
                 <command>set-tooltip</command>
                 <tooltip-id>carb-inlet-heat</tooltip-id>
                 <label>Carburetor inlet heat: %s</label>
                 <mapping>nasal</mapping>
                 <script>
                    var modes = ['NORMAL', 'HOT AIR'];
                    return modes[arg[0]];
                 </script>
                 <property>/controls/anti-ice/engine/inlet-heat</property>
             </binding>
         </hovered>
    </animation>
  
 <animation>
  <type>material</type>
    <object-name>carb-heat-warn</object-name>
    <object-name>up-down-placard</object-name>
    <object-name>gearLeverForward</object-name>
    <object-name>gearLeverHardware</object-name>
    <object-name>unlock-tailwheel-plac</object-name>
    <object-name>brake-placard</object-name>
    <object-name>naa-placard</object-name>
    <object-name>speed-limits-plac</object-name>
    <object-name>engine-limits-plac</object-name>
    <object-name>MP-warning-placard</object-name>
    <object-name>Ox-Dur-placard</object-name>
    <object-name>gun-circuit</object-name>
    <object-name>carbHP-plac-scrw2</object-name>
    <object-name>carbHP-plac-scrw3</object-name>
    <object-name>carbHP-plac-scrw4</object-name>
    <object-name>unlockTailwheel</object-name> 
    <object-name>MP-warning</object-name>
    <object-name>land-gear-placard</object-name>
    <object-name>gearLeverForward</object-name>
    <object-name>gearLeverRear</object-name>
    <object-name>RightRudderCarage</object-name>
    <object-name>LeftRudderCarage</object-name>
    <object-name>LeftRudderPedal</object-name>
    <object-name>RightRudderPedal</object-name>
    <object-name>floor-center</object-name>
    <object-name>Fuel-line</object-name>
    <object-name>Floor-Center-base</object-name>
    <object-name>LeftCockpitConsole</object-name>
    <object-name>BootTransition</object-name>
    <object-name>Stick</object-name>
    <object-name>Trigger2</object-name>
    <object-name>BootBody</object-name>
    <object-name>BootTop</object-name>
    <object-name>ReostatKnob</object-name>
    <object-name>ReostatPlate</object-name>    
    <object-name>ConsolePanel</object-name>
    <object-name>EjectSticker</object-name>
    <object-name>CoolantSticker</object-name>
    <object-name>CarbHeatSticker</object-name>
    <object-name>air-placard</object-name>
    <object-name>hot-air</object-name>
    <object-name>ram-air</object-name>
  <emission>
    <factor-prop>controls/lighting/cabin-norm</factor-prop>
    <red>0.25</red>
    <green>0.12</green>
    <blue>0.12</blue>
  </emission>
 </animation>
    
</PropertyList>
