<?xml version="1.0"?>
<PropertyList>

 <path>left-switch-box.ac</path>

    <animation>
        <type>rotate</type>
        <object-name>landing-light-switch</object-name>
        <property>/controls/lighting/landing-lights</property>
        <interpolation>
            <entry>
                <ind>0</ind>
                <dep>25</dep>
            </entry>
            <entry>
                <ind>1</ind>
                <dep>-25</dep>
            </entry>
        </interpolation>
        <center>
          <x-m>0.000</x-m>
          <y-m>0.04</y-m>
          <z-m>0.0</z-m>
        </center>
        <axis>
            <x>-1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

 <animation>
  <type>material</type>
  <object-name>left-switch-box</object-name>
  <object-name>left-flor-hump</object-name>
  <object-name>left-flor-light</object-name>
  <emission>
    <factor-prop>controls/lighting/cabin-norm</factor-prop>
    <red>0.28</red>
    <green>0.18</green>
    <blue>0.18</blue>
  </emission>
 </animation>

 <animation>
  <type>material</type>
  <object-name>landing-light-sw-body</object-name>
  <object-name>landing-light-switch</object-name>
  <object-name>oil-door-switch</object-name>
  <object-name>oil-door-sw-body</object-name>
  <object-name>coolant-door-sw-body</object-name>
  <object-name>coolant-door-switch</object-name>
  <emission>
    <factor-prop>controls/lighting/cabin-norm</factor-prop>
    <red>0.2</red>
    <green>0.12</green>
    <blue>0.12</blue>
  </emission>
 </animation>


 <animation>
  <type>material</type>
  <object-name>coolant-switch-guard</object-name>
  <object-name>oil-switch-guard</object-name>
  <emission>
    <factor-prop>controls/lighting/cabin-norm</factor-prop>
    <red>0.2</red>
    <green>0.0</green>
    <blue>0.0</blue>
  </emission>
 </animation>

    <animation>
        <type>pick</type>
        <object-name>landing-light-switch</object-name>
        <object-name>landing-light-sw-body</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-toggle</command>
                <property>/controls/lighting/landing-lights</property>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>landing-light-switch</tooltip-id>
                <label>Landing light: %s</label>
                <mapping>on-off</mapping>
                <property>/controls/lighting/landing-lights</property>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>knob</type>
        <drag-direction>vertical</drag-direction>
        <drag-scale-px>30</drag-scale-px>
        <object-name>left-flor-light</object-name>
        <property>/controls/lighting/left-flor-pos</property>
        <interpolation>
            <entry>
                <ind>0</ind>
                <dep>0</dep>
            </entry>
            <entry>
                <ind>1</ind>
                <dep>90</dep>
            </entry>
            <entry>
                <ind>2</ind>
                <dep>180</dep>
            </entry>
            <entry>
                <ind>3</ind>
                <dep>270</dep>
            </entry>
        </interpolation>
        <center>
          <x-m>-0.06018</x-m>
          <y-m>0.05159</y-m>
          <z-m>-0.00208</z-m>
        </center>
        <axis>
            <y>1</y>
        </axis>
        <action>
            <binding>
                <command>property-cycle</command>
                <property>/controls/lighting/left-flor-pos</property>
                <value type="int">0</value>
                <value type="int">3</value>
                <value type="int">2</value>
                <value type="int">1</value>
                <wrap>true</wrap>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>left-flor-light</tooltip-id>
                <label>Left fluorescent light: %s</label>
                <property>/controls/lighting/left-flor-pos</property>
                <mapping>nasal</mapping>
                <script>
                    var modes = ['OFF', 'START', 'ON', 'DIM'];
                    return modes[arg[0]];
                </script>
            </binding>
        </hovered>
    </animation>

     <animation>
         <type>rotate</type>
         <object-name>coolant-switch-guard</object-name>
         <property>/controls/switches/coolant-guard-switch</property>
         <factor>-120.0</factor>
         <center>
             <x-m>0.09189</x-m>
             <y-m>0.04916</y-m>
             <z-m>-0.02432</z-m>
         </center>
         <axis>
             <x>1</x>
         </axis>
     </animation>

    <animation>
        <type>rotate</type>
        <object-name>coolant-door-switch</object-name>
        <property>/aircraft/switches/coolant</property>
        <factor>25.0</factor>
        <center>
            <x-m>0.09128</x-m>
            <y-m>0.04511</y-m>
            <z-m>-0.0030</z-m>
        </center>
        <axis>
            <z>1</z>
        </axis>
        <condition>
            <not-equals>
                <property>/aircraft/switches/coolant</property>
                <value>2</value>
            </not-equals>
        </condition>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>coolant-door-switch</object-name>
        <object-name>coolant-door-sw-body</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <condition>
                    <and>
                        <property>devices/status/keyboard/shift</property>
                        <equals>
                            <property>/aircraft/switches/coolant</property>
                            <value>0</value>
                        </equals>
                    </and>
                </condition>
                <command>property-assign</command>
                <property>/aircraft/switches/coolant</property>
                <value type="int">-1</value>
            </binding>
            <binding>
                <condition>
                    <and>
                        <not><property>devices/status/keyboard/shift</property></not>
                        <equals>
                            <property>/aircraft/switches/coolant</property>
                            <value>0</value>
                        </equals>
                    </and>
                </condition>
                <command>property-assign</command>
                <property>/aircraft/switches/coolant</property>
                <value type="int">1</value>
            </binding>
            <mod-up>
                <binding>
                    <command>property-assign</command>
                    <property>/aircraft/switches/coolant</property>
                    <value type="int">0</value>
                </binding>
            </mod-up>
        </action>
        <action>
            <button>1</button>
            <repeatable>false</repeatable>
            <binding>
                <condition>
                    <and>
                        <equals>
                            <property>/aircraft/switches/coolant</property>
                            <value>0</value>
                        </equals>
                    </and>
                </condition>
                <command>property-assign</command>
                <property>/aircraft/switches/coolant</property>
                <value type="int">-1</value>
            </binding>
            <mod-up>
                <binding>
                    <command>property-assign</command>
                    <property>/aircraft/switches/coolant</property>
                    <value type="int">0</value>
                </binding>
            </mod-up>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>coolant-switch</tooltip-id>
                <label>Coolant: %s</label>
                <mapping>nasal</mapping>
                <script>
                    var modes = ['CLOSED', 'OFF (close guard for AUTOMATIC)', 'OPEN', 'AUTOMATIC'];
                    return modes[arg[0]+1];
                </script>
                <property>/aircraft/switches/coolant</property>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>coolant-switch-guard</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-toggle</command>
                <property>/controls/switches/coolant-guard-switch</property>
            </binding>
            <binding>
                <condition>
                    <not>
                        <property>/controls/switches/coolant-guard-switch</property>
                    </not>
                </condition>
                <command>property-assign</command>
                <property>/aircraft/switches/coolant</property>
                <value type="int">2</value>
            </binding>
            <binding>
                <condition>
                    <property>/controls/switches/coolant-guard-switch</property>
                </condition>
                <command>property-assign</command>
                <property>/aircraft/switches/coolant</property>
                <value type="int">0</value>
            </binding>
        </action>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>oil-switch-guard</object-name>
        <property>/controls/switches/oil-guard-switch</property>
        <factor>-120.0</factor>
        <center>
            <x-m>0.03438</x-m>
            <y-m>0.04916</y-m>
            <z-m>-0.02432</z-m>
        </center>
        <axis>
            <x>1</x>
        </axis>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>oil-door-switch</object-name>
        <property>/aircraft/switches/oil</property>
        <factor>25.0</factor>
        <center>
            <x-m>0.03351</x-m>
            <y-m>0.04361</y-m>
            <z-m>-0.0031</z-m>
        </center>
        <axis>
            <z>1</z>
        </axis>
        <condition>
            <not-equals>
                <property>/aircraft/switches/oil</property>
                <value>2</value>
            </not-equals>
        </condition>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>oil-door-switch</object-name>
        <object-name>oil-door-sw-body</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <condition>
                    <and>
                        <property>devices/status/keyboard/shift</property>
                        <equals>
                            <property>/aircraft/switches/oil</property>
                            <value>0</value>
                        </equals>
                    </and>
                </condition>
                <command>property-assign</command>
                <property>/aircraft/switches/oil</property>
                <value type="int">-1</value>
            </binding>
            <binding>
                <condition>
                    <and>
                        <not><property>devices/status/keyboard/shift</property></not>
                        <equals>
                            <property>/aircraft/switches/oil</property>
                            <value>0</value>
                        </equals>
                    </and>
                </condition>
                <command>property-assign</command>
                <property>/aircraft/switches/oil</property>
                <value type="int">1</value>
            </binding>
            <mod-up>
                <binding>
                    <command>property-assign</command>
                    <property>/aircraft/switches/oil</property>
                    <value type="int">0</value>
                </binding>
            </mod-up>
        </action>
        <action>
            <button>1</button>
            <repeatable>false</repeatable>
            <binding>
                <condition>
                    <and>
                        <equals>
                            <property>/aircraft/switches/oil</property>
                            <value>0</value>
                        </equals>
                    </and>
                </condition>
                <command>property-assign</command>
                <property>/aircraft/switches/oil</property>
                <value type="int">-1</value>
            </binding>
            <mod-up>
                <binding>
                    <command>property-assign</command>
                    <property>/aircraft/switches/oil</property>
                    <value type="int">0</value>
                </binding>
            </mod-up>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>oil-switch</tooltip-id>
                <label>Oil: %s</label>
                <mapping>nasal</mapping>
                <script>
                    var modes = ['CLOSED', 'OFF (close guard for AUTOMATIC)', 'OPEN', 'AUTOMATIC'];
                    return modes[arg[0]+1];
                </script>
                <property>/aircraft/switches/oil</property>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>oil-switch-guard</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-toggle</command>
                <property>/controls/switches/oil-guard-switch</property>
            </binding>
            <binding>
                <condition>
                    <not>
                        <property>/controls/switches/oil-guard-switch</property>
                    </not>
                </condition>
                <command>property-assign</command>
                <property>/aircraft/switches/oil</property>
                <value type="int">2</value>
            </binding>
            <binding>
                <condition>
                    <property>/controls/switches/oil-guard-switch</property>
                </condition>
                <command>property-assign</command>
                <property>/aircraft/switches/oil</property>
                <value type="int">0</value>
            </binding>
        </action>
    </animation>

</PropertyList>
