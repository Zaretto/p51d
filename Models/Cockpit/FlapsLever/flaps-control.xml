<?xml version="1.0"?>
<PropertyList>

 <path>flaps-control.ac</path>

 <animation>
  <type>knob</type>
  <drag-direction>vertical</drag-direction>
  <drag-scale-px>30.0</drag-scale-px>
  <object-name>flaps-lever</object-name>
  <object-name>flaps-knob</object-name>
      <property>/controls/flight/flaps</property>
  <interpolation>
   <entry>
    <ind>0</ind>
    <dep>0</dep>
   </entry>
   <entry>
    <ind>1.0</ind>
    <dep>-55</dep>
   </entry>
  </interpolation>
  <axis>
   <y>-1</y>
  </axis>
          <increase>
              <binding>
                  <command>nasal</command>
                  <script>controls.flapsDown(-1)</script>
              </binding>
          </increase>
          <decrease>
              <binding>
                  <command>nasal</command>
                  <script>controls.flapsDown(1)</script>
              </binding>
          </decrease>
          <hovered>
              <binding>
                  <command>set-tooltip</command>
                  <tooltip-id>flaps-pos</tooltip-id>
                  <label>Flap position: %.1f deg</label>
                  <property>/fdm/jsbsim/fcs/flap-cmd-deg</property>
              </binding>
          </hovered>
 </animation>

  <animation>
  <type>material</type>
  <object-name>flaps-index</object-name>
  <emission>
    <factor-prop>controls/lighting/cabin-norm</factor-prop>
    <red>0.25</red>
    <green>0.15</green>
    <blue>0.15</blue>
  </emission>
 </animation>

 <animation>
  <type>material</type>
  <object-name>flaps-knob</object-name>
  <object-name>flaps-lever</object-name>
  <emission>
    <factor-prop>controls/lighting/cabin-norm</factor-prop>
    <red>0.15</red>
    <green>0.0</green>
    <blue>0.0</blue>
  </emission>
 </animation>

</PropertyList>
