<?xml version="1.0"?>

<PropertyList>

    <path>park-brake.ac</path>

    <animation>
        <type>translate</type>
        <object-name>handle</object-name>
        <property>/fdm/jsbsim/systems/brakes/brake-parking-cmd-norm</property>
        <interpolation>
            <entry>
                <ind>0</ind>
                <dep>0</dep>
            </entry>
            <entry>
                <ind>1</ind>
                <dep>0.01</dep>
            </entry>
        </interpolation>
        <center>
            <x-m>0.0</x-m>
            <y-m>0.0</y-m>
            <z-m>0.016</z-m>
        </center>
        <axis>
            <x>1</x>
        </axis>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>handle</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-toggle</command>
                <property>/controls/gear/brake-parking</property>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>parking-brakes-set</tooltip-id>
                <label>Parking brakes: %s</label>
                <mapping>nasal</mapping>
                <script>
                    var lever = getprop("/controls/gear/brake-parking");

                    if (arg[0]) {
                        var text = [' (tap brakes to release)', ' (push lever back!)'];
                        return sprintf('ENABLED%s', text[lever]);
                    }
                    else {
                        var text = ['', ' (depress and release brakes)'];
                        return sprintf('RELEASED%s', text[lever]);
                    }
                </script>
                <property>/aircraft/brakes/parking-set</property>
            </binding>
        </hovered>
    </animation>

</PropertyList>
