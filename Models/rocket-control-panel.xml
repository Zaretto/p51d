<?xml version="1.0"?>
<!DOCTYPE PropertyList SYSTEM "panel.dtd">

<!-- This part should be the same for any 3D panel.  Customize the actions section -->
<PropertyList>

 <name>P51D Panel Hotspots lower panel</name>
 <background>Aircraft/p51d/Models/transparent-bg.rgb</background>
 <w>1024</w>
 <h>768</h>
 <y-offset>0</y-offset>

 <instruments>
  <instrument>
   <name>Lower Panel Controls</name>
   <x>512</x>
   <y>384</y>
   <w>1024</w>
   <h>768</h>
   <w-base>1024</w-base>
   <h-base>1024</h-base>


 <layers>
  <layer>
   <name>background</name>
   <texture>
<!--
     <path>Aircraft/p51d/Models/hotspotgrid.rgb</path>
-->
     <path>Aircraft/p51d/Models/transparent-bg.rgb</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>1.0</x2>
     <y2>1.0</y2>
   </texture>
  </layer>
 </layers>

<!-- define hotspot actions below -->

 <actions>


  <!-- gun switch hotspots -->
  <action>
   <name>switch guns camera and sight</name>
   <button>0</button>
   <x>-193</x>
   <y>-190</y>
   <w>64</w>
   <h>30</h>
   <binding>
    <command>property-assign</command>
    <property>/controls/armament/gunsight/power-on</property>
    <value>1</value>
    </binding>
    <binding>
    <command>property-assign</command>
    <property>/controls/armament/guns-enabled</property>
    <value>1</value>
   </binding>
  </action>

  <action>
   <name>switch off</name>
   <button>0</button>
   <x>-193</x>
   <y>-210</y>
   <w>64</w>
   <h>20</h>
   <binding>
    <command>property-assign</command>
    <property>/controls/armament/gunsight/power-on</property>
    <value>0</value>
    </binding>
    <binding>
    <command>property-assign</command>
    <property>/controls/armament/guns-enabled</property>
    <value>0</value>
   </binding>
  </action>

  <action>
   <name>switch camera and sight</name>
   <button>0</button>
   <x>-193</x>
   <y>-240</y>
   <w>64</w>
   <h>30</h>
   <binding>
    <command>property-assign</command>
    <property>/controls/armament/gunsight/power-on</property>
    <value>-1</value>
    </binding>
    <binding>
    <command>property-assign</command>
    <property>/controls/armament/guns-enabled</property>
    <value>0</value>
   </binding>
  </action>

  <action>
   <name>right bomb arm chem release down</name>
   <button>0</button>
   <x>30</x>
   <y>-138</y>
   <w>48</w>
   <h>20</h>
   <binding>
    <command>property-assign</command>
    <property>/controls/armament/right-bomb-arm-chem-release</property>
    <value>-1</value>
    </binding>
  </action>

  <action>
   <name>right bomb arm chem release mid</name>
   <button>0</button>
   <x>30</x>
   <y>-118</y>
   <w>48</w>
   <h>20</h>
   <binding>
    <command>property-assign</command>
    <property>/controls/armament/right-bomb-arm-chem-release</property>
    <value>0</value>
    </binding>
  </action>

  <action>
   <name>right bomb arm chem release up</name>
   <button>0</button>
   <x>30</x>
   <y>-98</y>
   <w>48</w>
   <h>20</h>
   <binding>
    <command>property-assign</command>
    <property>/controls/armament/right-bomb-arm-chem-release</property>
    <value>1</value>
    </binding>
  </action>

  <action>
   <name>left bomb arm chem release down</name>
   <button>0</button>
   <x>-20</x>
   <y>-138</y>
   <w>48</w>
   <h>20</h>
   <binding>
    <command>property-assign</command>
    <property>/controls/armament/left-bomb-arm-chem-release</property>
    <value>-1</value>
    </binding>
  </action>

  <action>
   <name>left bomb arm chem release mid</name>
   <button>0</button>
   <x>-20</x>
   <y>-118</y>
   <w>48</w>
   <h>20</h>
   <binding>
     <command>property-assign</command>
     <property>/controls/armament/left-bomb-arm-chem-release</property>
     <value>0</value>
    </binding>
  </action>

  <action>
   <name>left bomb arm chem release up</name>
   <button>0</button>
   <x>-20</x>
   <y>-98</y>
   <w>48</w>
   <h>20</h>
   <binding>
     <command>property-assign</command>
     <property>/controls/armament/left-bomb-arm-chem-release</property>
     <value>1</value>
    </binding>
  </action>

  <action>
   <name>bombs both</name>
   <button>0</button>
   <x>-100</x>
   <y>-138</y>
   <w>30</w>
   <h>20</h>
   <binding>
    <command>property-assign</command>
    <property>/controls/armament/weapons-select</property>
    <value>1</value>
    </binding>
  </action>

  <action>
   <name>bombs train</name>
   <button>0</button>
   <x>-70</x>
   <y>-138</y>
   <w>30</w>
   <h>20</h>
   <binding>
    <command>property-assign</command>
    <property>/controls/armament/weapons-select</property>
    <value>2</value>
    </binding>
  </action>

  <action>
   <name>bombs rockets off</name>
   <button>0</button>
   <x>-95</x>
   <y>-118</y>
   <w>48</w>
   <h>20</h>
   <binding>
     <command>property-assign</command>
     <property>/controls/armament/weapons-select</property>
     <value>0</value>
    </binding>
  </action>

  <action>
   <name>rockets on</name>
   <button>0</button>
   <x>-95</x>
   <y>-98</y>
   <w>48</w>
   <h>20</h>
   <binding>
     <command>property-assign</command>
     <property>/controls/armament/weapons-select</property>
     <value>3</value>
    </binding>
  </action>

  </instrument>

 </instruments>

</PropertyList>