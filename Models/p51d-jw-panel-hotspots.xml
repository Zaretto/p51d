<?xml version="1.0"?>
<!DOCTYPE PropertyList SYSTEM "panel.dtd">

<!-- This part should be the same for any 3D panel.  Customize the actions section -->
<PropertyList>

 <name>P51D Panel Hotspots</name>
 <background>Aircraft/p51d/Models/transparent-bg.rgb</background>
 <w>1024</w>
 <h>768</h>
 <y-offset>0</y-offset>

 <instruments>
  <instrument>
   <name>Flaps Control</name>
   <x>512</x>
   <y>384</y>
   <w>1024</w>
   <h>768</h>
   <w-base>1024</w-base>
   <h-base>1024</h-base>


 <layers>
  <layer>
   <name>background</name>
   <texture>
<!--
     <path>Aircraft/p51d/Models/hotspotgrid.rgb</path>
-->
     <path>Aircraft/p51d/Models/transparent-bg.rgb</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>1.0</x2>
     <y2>1.0</y2>
   </texture>
  </layer>
 </layers>

<!-- define hotspot actions below -->

 <actions>

  <!-- gyro compass hotspots -->
  <action>
   <name></name>
   <button>0</button>
   <x>-190</x>
   <y>125</y>
   <w>20</w>
   <h>32</h>
   <binding>
    <command>property-adjust</command>
    <property>/instrumentation/heading-indicator/offset-deg</property>
    <step>-1</step>
    <min>0</min>
    <max>360</max>
    <wrap>true</wrap>
   </binding>
  </action>
  
  <action>
   <name></name>
   <button>1</button>
   <x>-190</x>
   <y>125</y>
   <w>20</w>
   <h>32</h>
   <binding>
    <command>property-adjust</command>
    <property>/instrumentation/heading-indicator/offset-deg</property>
    <step>-5</step>
    <min>0</min>
    <max>360</max>
    <wrap>1</wrap>
   </binding>
  </action>

  <action>
   <name></name>
   <button>0</button>
   <x>-170</x>
   <y>125</y>
   <w>20</w>
   <h>32</h>
   <binding>
    <command>property-adjust</command>
    <property>/instrumentation/heading-indicator/offset-deg</property>
    <step>1</step>
    <min>0</min>
    <max>360</max>
    <wrap>true</wrap>
   </binding>
  </action>
  
  <action>
   <name></name>
   <button>1</button>
   <x>-170</x>
   <y>125</y>
   <w>20</w>
   <h>32</h>
   <binding>
    <command>property-adjust</command>
    <property>/instrumentation/heading-indicator/offset-deg</property>
    <step>5</step>
    <min>0</min>
    <max>360</max>
    <wrap>1</wrap>
   </binding>
  </action>

  <!-- altimeter hotspots -->
  <action>
   <name>calibrate fine</name>
   <button>0</button>
   <x>-436</x>
   <y>10</y>
   <w>20</w>
   <h>36</h>
   <binding>
    <command>property-adjust</command>
    <property>/instrumentation/altimeter/setting-inhg</property>
    <step>-0.01</step>
    <min>26.0</min>
    <max>33.0</max>
    <wrap>false</wrap>
   </binding>
  </action>

  <action>
   <name>calibrate coarse</name>
   <button>1</button>
   <x>-436</x>
   <y>10</y>
   <w>20</w>
   <h>36</h>
   <binding>
    <command>property-adjust</command>
    <property>/instrumentation/altimeter/setting-inhg</property>
    <step>-0.1</step>
    <min>26.0</min>
    <max>33.0</max>
    <wrap>false</wrap>
   </binding>
  </action>

  <action>
   <name>calibrate fine</name>
   <button>0</button>
   <x>-416</x>
   <y>10</y>
   <w>20</w>
   <h>36</h>
   <binding>
    <command>property-adjust</command>
    <property>/instrumentation/altimeter/setting-inhg</property>
    <step>0.01</step>
    <min>26.0</min>
    <max>33.0</max>
    <wrap>false</wrap>
   </binding>
  </action>

  <action>
   <name>calibrate coarse</name>
   <button>1</button>
   <x>-416</x>
   <y>10</y>
   <w>20</w>
   <h>36</h>
   <binding>
    <command>property-adjust</command>
    <property>/instrumentation/altimeter/setting-inhg</property>
    <step>0.1</step>
    <min>26.0</min>
    <max>33.0</max>
    <wrap>false</wrap>
   </binding>
  </action>

  <!-- ingition switch hotspots -->
  <action>
   <name>switch up</name>
   <button>0</button>
   <x>-254</x>
   <y>-260</y>
   <w>64</w>
   <h>64</h>
   <binding>
    <command>property-adjust</command>
    <property>/controls/magnetos[0]</property>
    <step>1</step>
    <min>0</min>
    <max>3</max>
    <wrap>0</wrap>
   </binding>
  </action>

  <action>
   <name>switch down</name>
   <button>0</button>
   <x>-190</x>
   <y>-260</y>
   <w>64</w>
   <h>64</h>
   <binding>
    <command>property-adjust</command>
    <property>/controls/magnetos[0]</property>
    <step>-1</step>
    <min>0</min>
    <max>3</max>
    <wrap>0</wrap>
   </binding>
  </action>

